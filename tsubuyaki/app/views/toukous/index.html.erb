<p id="notice"><%= notice %></p>

<h1>投稿一覧</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @toukous.each do |toukou| %>
      <tr>
        <td><%= toukou.content %></td>
        <td><%= link_to 'Show', toukou %></td>
        <td><%= link_to 'Edit', edit_toukou_path(toukou) %></td>
        <td><%= link_to 'Destroy', toukou, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

